{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}
    <h1>liste de suivi des instruments </h1>
    <br><br><br>
<div class="card-block">
   <div class="table-responsive dt-responsive">
      <table id="simpletable" class="table table-striped table-bordered nowrap">
        <thead>
            <tr>
                <th>Code</th>
                <th>Designation</th>
                <th>Lecture</th>
                <th>Preci</th>
                <th>Type</th>
                <th>Nserie</th>
                <th>Marque</th>
                <th>Section</th>
                <th>Postetravaile</th>
                <th>Date</th>
                <th>Frequencecalibrage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td>{{ piece.code }}</td>
                <td>{{ piece.designation }}</td>
                <td>{{ piece.lecture }}</td>
                <td>{{ piece.preci }}</td>
                <td>{{ piece.type }}</td>
                <td>{{ piece.Nserie }}</td>
                <td>{{ piece.marque }}</td>
                <td>{{ piece.section }}</td>
                <td>{{ piece.postetravaile }}</td>
                <td>{{ piece.date ? piece.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ piece.frequencecalibrage }}</td>
                <td>
                    <a href="{{ path('piece_show', {'id': piece.id}) }}" class="btn btn-info">detail</a>
                    <a href="{{ path('piece_edit', {'id': piece.id}) }}" class="btn btn-grd-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
      </table>
   </div>
</div>

    <a href="{{ path('piece_new') }}"  class="btn btn-primary">Ajouter</a>
{% endblock %}
